<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('base/header/head') %>
</head>
<body class="<%= typeof rightSidebar !== 'undefined' && rightSidebar ? 'has-right-sidebar' : '' %>">
  <!-- Top Navigation -->
  <%- include('base/menu/top') %>

  <!-- Mobile Sidebar -->
  <aside class="mobile-sidebar" id="mobile-sidebar">
    <%- include('base/menu/L-sidebar') %>
  </aside>

  <!-- Left Sidebar -->
  <%- include('base/menu/L-sidebar') %>

  <!-- Right Sidebar (conditionally included) -->
  <% if (typeof rightSidebar !== 'undefined' && rightSidebar) { %>
    <%- include('base/menu/R-sidebar') %>
  <% } %>

  <!-- Main Content -->
  <main class="content" id="content">
    <%- content %>
  </main>

  <!-- Footer -->
  <footer class="footer">
    <%- include('base/footer/footer') %>
  </footer>

  <!-- JavaScript -->
  <script src="/assets/js/sidebar.js"></script>
  <script src="/assets/js/top-nav.js"></script>
  <script src="/assets/js/theme.js"></script>
  
  <!-- GitHub Buttons Script -->
  <script async defer src="https://buttons.github.io/buttons.js"></script>

  <!-- Rest of your scripts... -->
</body>
</html>